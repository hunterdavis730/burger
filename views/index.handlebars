<div class="container">
    <div class="jumbotron pb-0">
        <h2 class="text-center">Eat-Da-Burger</h2>
        <div class="d-flex justify-content-start ml-4 mt-5 mb-0">
            <button type="button" class="btn btn-success ml-4" id="add">Add Burger</button>

        </div>
    </div>

    <div class="modal fade" id="addBurger" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="matchesTitle">Add a burger you want to devour!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Burger Name</label>
                            <input type="text" class="form-control" id="burgerName" placeholder="burger name">
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="modalClose" data-dismiss="modal">Add
                        Burger</button>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 border-right border-dark">
            <div class="row d-flex justify-content-center">
                <div class="col-md-12">
                    <h3 class="text-center">Burgers</h3>
                    <hr>
                </div>
                <div class="col-md-12">
                    <ul class="mt-4">
                        {{#each burger}}
                        {{#unless this.devoured}}
                        <li class="mt-3" style="list-style: none">
                            <i class="fas fa-hamburger mx-3"></i>{{this.burger_name}}
                            <button data-id="{{this.id}}" type="button" class="btn btn-success ml-4 eat">Devour</button>

                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="row d-flex justify-content-center">
                <div class="col-md-12">
                    <h3 class="text-center">Devoured Burgers</h3>
                    <hr>
                </div>
                <div class="col-md-12">
                    <ul class="mt-4 ml-5">
                        {{#each burger}}
                        {{#if this.devoured}}
                        <li class="mt-2" style="list-style: none; text-decoration: line-through">
                            <i class="fas fa-hamburger mx-3"></i>{{this.burger_name}}

                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>

        </div>


    </div>


</div>